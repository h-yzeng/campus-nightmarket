# GitHub linguist configuration - hide config files from language stats
*.json linguist-generated=true
*.config.js linguist-generated=true
*.config.ts linguist-generated=true

# Mark lockfiles as generated to collapse them on GitHub
package-lock.json linguist-generated=true
yarn.lock linguist-generated=true
pnpm-lock.yaml linguist-generated=true

# Collapse large config files
tsconfig*.json linguist-generated=true
jest.config.js linguist-generated=true
vite.config.ts linguist-generated=true
vercel.json linguist-generated=true
firebase.json linguist-generated=true
components.json linguist-generated=true

# Mark documentation as documentation
*.md linguist-documentation=true
